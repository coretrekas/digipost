{
    "preset": "laravel",
    "rules": {
        "align_multiline_comment": true,
        "array_indentation": true,
        "array_syntax": {
            "syntax": "short"
        },
        "blank_line_before_statement": {
            "statements": [
                "break",
                "continue",
                "declare",
                "return",
                "throw",
                "try"
            ]
        },
        "class_attributes_separation": {
            "elements": {
                "const": "one",
                "method": "one",
                "property": "one"
            }
        },
        "concat_space": {
            "spacing": "none"
        },
        "declare_strict_types": true,
        "final_class": false,
        "global_namespace_import": {
            "import_classes": true,
            "import_constants": true,
            "import_functions": true
        },
        "method_argument_space": {
            "on_multiline": "ensure_fully_multiline"
        },
        "no_unused_imports": true,
        "not_operator_with_successor_space": false,
        "ordered_class_elements": {
            "order": [
                "use_trait",
                "case",
                "constant_public",
                "constant_protected",
                "constant_private",
                "property_public",
                "property_protected",
                "property_private",
                "construct",
                "destruct",
                "magic",
                "phpunit",
                "method_public",
                "method_protected",
                "method_private"
            ]
        },
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "phpdoc_align": {
            "align": "left"
        },
        "phpdoc_order": true,
        "phpdoc_separation": true,
        "phpdoc_types_order": {
            "null_adjustment": "always_last",
            "sort_algorithm": "none"
        },
        "single_line_comment_style": {
            "comment_types": [
                "hash"
            ]
        },
        "single_trait_insert_per_statement": true,
        "trailing_comma_in_multiline": {
            "elements": [
                "arrays",
                "arguments",
                "parameters"
            ]
        },
        "yoda_style": {
            "equal": false,
            "identical": false,
            "less_and_greater": false
        }
    }
}

